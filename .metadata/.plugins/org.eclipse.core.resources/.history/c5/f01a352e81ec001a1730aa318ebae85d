#include "ili9341.h"

 uint16_t X_SIZE = 0;

uint16_t Y_SIZE = 0;
uint32_t dtt=0;

 void TFT9341_ini(void)
{

}

 void TFT9341_Delay(uint32_t dly)

{

    uint32_t i;

    for(i = 0; i < dly; i++);

}

//————————————————————–

__STATIC_INLINE void DelayMicro(__IO uint32_t micros)

{

        micros *=(SystemCoreClock / 1000000) / 5;

        while (micros–);

}

//————————————————————–

void TFT9341_SendCommand(unsigned char cmd)

{

       ADDR_CMD = cmd;

}

//————————————————————–

void TFT9341_SendData(unsigned char dt)

{

       ADDR_DATA = dt;

       TFT9341_Delay(1);

}

//————————————————————–

uint32_t TFT9341_ReadReg(uint8_t r)

{

       uint32_t id;

       uint8_t x;

       TFT9341_SendCommand(r);

       DelayMicro(50);

       x=ADDR_DATA;

       id=x;

       id<<=8;

       DelayMicro(1);

       x=ADDR_DATA;

       id|=x;

       id<<=8;

       DelayMicro(1);

       x=ADDR_DATA;

       id|=x;

       id<<=8;

       DelayMicro(1);

       x=ADDR_DATA;

       id|=x;

       if(r==0xEF)

       {

               id<<=8;

               DelayMicro(5);

               x=ADDR_DATA;

               id|=x;

       }

       DelayMicro(150);//stabilization time

       return id;

}

//————————————————————–

void TFT9341_SetRotation(unsigned char r)

{

       TFT9341_SendCommand(0x36);

       switch(r)

       {

               case 0:

               TFT9341_SendData(0x48);

               X_SIZE = 240;

               Y_SIZE = 320;

               break;

               case 1:

               TFT9341_SendData(0x28);

               X_SIZE = 320;

               Y_SIZE = 240;

               break;

               case 2:

               TFT9341_SendData(0x88);

               X_SIZE = 240;

               Y_SIZE = 320;

               break;

               case 3:

               TFT9341_SendData(0xE8);

               X_SIZE = 320;

               Y_SIZE = 240;

               break;

       }

}


void TFT9341_reset(void)

{

       RESET_ACTIVE;

       HAL_Delay(2);

       RESET_IDLE;

       TFT9341_SendCommand(0x01); //Software Reset

       for (uint8_t i=0;i<3;i++)         TFT9341_SendData(0xFF);

}


