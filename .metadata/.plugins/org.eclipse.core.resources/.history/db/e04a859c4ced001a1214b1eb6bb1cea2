#ifndef ILI9341_H_
#define ILI9341_H_

#include <stdlib.h>

#include "stm32f4xx_hal.h"
#include "fsmc.h"

#define ADDR_CMD        *(uint8_t*)0x60000000
#define ADDR_DATA        *(uint8_t*)0x60010000
#define ADDR_DATA        *(uint8_t*)0x60010000

#define swap(a,b) {int16_t t=a;a=b;b=t;}

#define  RESET_ACTIVE   HAL_GPIO_WritePin(GPIOD, GPIO_PIN_6, GPIO_PIN_RESET);
#define  RESET_IDLE   HAL_GPIO_WritePin(GPIOD, GPIO_PIN_6, GPIO_PIN_SET);

#define  BLACK 0x0000
#define  BLUE 0x001F
#define  RED 0x0F800
#define  GREEN 0x07E0
#define  CYAN 0x07FF
#define  MAGENTA 0xF81F
#define  YELLOW 0xFFE0
#define  WHITE 0xFFFF

#define convert24to16(x) (((x & 0x00f80000) >> 8 ) | ((x & 0x0000fc00) >> 5) |((x & 0x000000f8) >> 3))

void TFT9341_ini(void);
void TFT9341_SendCommand(unsigned char cmd);

void TFT9341_SendData(unsigned char dt);

uint32_t TFT9341_ReadReg(uint8_t r);

void TFT9341_SetRotation(unsigned char r);

void TFT9341_reset(void);
void TFT9341_FillScreen(uint16_t color);

#endif /* ILI9341_H_ */ 
