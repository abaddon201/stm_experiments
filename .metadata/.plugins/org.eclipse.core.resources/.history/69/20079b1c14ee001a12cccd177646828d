#ifndef INC_FONTS_H_
#define INC_FONTS_H_


class FontSystem {
public:
    struct Font {
        uint16_t Width;
        uint16_t Height;
        uint16_t bytesWidth;
        uint16_t *data;
    };

    sFONT Font24;
    sFONT Font20;
    sFONT Font16;
    sFONT Font12;
    sFONT Font8;

    void init();
    void loadFont(struct Font *font, uint16_t w, uint16_t h, const char *fname);

    void drawChar(struct Font *font, uint16_t x, uint16_t y, uint8_t s);

};


#endif /* INC_FONTS_H_ */
